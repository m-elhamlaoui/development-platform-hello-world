pipeline {
  agent any

  environment {
    IMAGE_NAME = 'frontend_spaceapp'
    DOCKER_TAG = 'latest'
    KUBECONFIG = '/var/lib/jenkins/.kube/config' // Assumes Jenkins agent has access
  }

  stages {
    stage('Checkout Code') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('SpaceApp/frontend') {
          sh "docker build -t youssefbouraoui1/${IMAGE_NAME}:${DOCKER_TAG} ."
        }
      }
    }

    stage('Push to Docker Hub') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_TOKEN')]) {
          sh '''
            echo "$DOCKERHUB_TOKEN" | docker login -u "$DOCKERHUB_USER" --password-stdin
          '''
          dir('SpaceApp/frontend') {
            sh "docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:${DOCKER_TAG}"
          }
          sh 'docker logout'
        }
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        dir('SpaceApp/frontend') {
          echo 'üöÄ Deploying frontend to Kubernetes...'
          sh '''
            if ! kubectl cluster-info; then
              echo "‚ùå Unable to connect to Kubernetes cluster. Check KUBECONFIG or credentials."
              exit 1
            fi
            kubectl apply -f deployement.yml --validate=false
            kubectl apply -f services.yml
          '''
        }
      }
    }
  }

  post {
    success {
      echo '‚úÖ Frontend deployed and image pushed to Docker Hub successfully.'
    }
    failure {
      echo '‚ùå Pipeline failed.'
    }
  }
}
