pipeline {
    agent any

    environment {
        IMAGE_NAME = 'satellite-app:latest'
        DOCKER_CONTEXT = 'SpaceApp/SatelliteTracker'
        WINDOWS_CONTEXT = 'SpaceApp\\SatelliteTracker'
    }

    stages {
        stage('🔍 Checkout Code') {
            steps {
                echo '✅ Checking out code from local workspace'
                checkout scm
            }
        }

        stage('📁 List Directory') {
            steps {
                echo '🔎 Showing project structure...'
                bat "dir"
                bat "dir %WINDOWS_CONTEXT%"
            }
        }

        stage('🐳 Build Docker Image') {
            steps {
                echo '🛠 Building Docker image from subdirectory...'
                bat "docker build -t %IMAGE_NAME% %DOCKER_CONTEXT%"
            }
        }
    }

    post {
        always {
            echo '✅ Done. Image build test complete.'
        }
    }
}
