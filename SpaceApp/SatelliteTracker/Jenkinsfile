pipeline {
    agent any

    environment {
        IMAGE_NAME = 'satellite-app:latest'
    }

    stages {
        stage('ğŸ” Checkout Code') {
            steps {
                echo 'âœ… Checking out code from local workspace'
                checkout scm
            }
        }

        stage('ğŸ³ Build Docker Image') {
            steps {
                echo 'ğŸ›  Building Docker image...'
                bat "docker build -t $IMAGE_NAME ."
            }
        }
    }

    post {
        always {
            echo 'âœ… Done. Image build test complete.'
        }
    }
}
