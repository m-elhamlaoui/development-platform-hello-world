pipeline {
    agent any

    environment {
        IMAGE_NAME = 'satellite-app:latest'
    }

    stages {
        stage('🔍 Checkout Code') {
            steps {
                echo '✅ Checking out code from local workspace'
                checkout scm
            }
        }

        stage('🐳 Build Docker Image') {
            steps {
                echo '🛠 Building Docker image...'
                bat "docker build -t $IMAGE_NAME ."
            }
        }
    }

    post {
        always {
            echo '✅ Done. Image build test complete.'
        }
    }
}
