pipeline {
    agent any

    environment {
        IMAGE_NAME = 'satellite-app:latest'
        DOCKER_CONTEXT = 'SpaceApp\\SatelliteTracker' // update this path as needed
    }

    stages {
        stage('ğŸ” Checkout Code') {
            steps {
                echo 'âœ… Checking out code from local workspace'
                checkout scm
            }
        }

        stage('ğŸ“ List Directory') {
            steps {
                echo 'ğŸ” Showing project structure...'
                bat "dir"
                bat "dir %DOCKER_CONTEXT%"
            }
        }

        stage('ğŸ³ Build Docker Image') {
            steps {
                echo 'ğŸ›  Building Docker image from subdirectory...'
                bat "docker build -t %IMAGE_NAME% %DOCKER_CONTEXT%"
            }
        }
    }

    post {
        always {
            echo 'âœ… Done. Image build test complete.'
        }
    }
}
